@page "/"

<div class="flex flex-col space-y-4">
    <div class="lg:fixed lg:top-18 lg:left-0 lg:w-80 lg:h-full p-4 bg-white dark:bg-[#1E1E1E] shadow-md border-r border-[#E7E7E7] dark:border-[#2D2D2D] z-10">
        <h2 class="text-lg font-bold text-gray-900 dark:text-gray-100 mb-4 pb-2 border-b border-[#E7E7E7] dark:border-[#2D2D2D]">
            @Localizer.Settings_Title
        </h2>
        <div class="space-y-6">
            <div class="space-y-4 bg-gray-100 dark:bg-[#1E1E1E] rounded-lg p-4 border border-[#E7E7E7] dark:border-[#2D2D2D]">
                <h3 class="text-sm font-bold text-gray-800 dark:text-gray-100">@Localizer.TypeSettings_Title</h3>
                <div class="space-y-3">
                    <div class="flex items-center justify-between">
                        <label class="text-xs font-mono font-semibold text-gray-800 dark:text-gray-200" for="use-records">@Localizer.UseRecords_Label</label>
                        <input type="checkbox" id="use-records" @bind="_conversionSettings.UseRecords" class="rounded text-blue-600 dark:bg-gray-700 dark:border-gray-600 focus:ring-blue-400">
                    </div>
                    @if (_conversionSettings.UseRecords)
                    {
                        <div class="flex items-center justify-between">
                            <label class="text-xs font-mono font-semibold text-gray-800 dark:text-gray-200" for="use-primary-constructor">@Localizer.UsePrimaryConstructor_Label</label>
                            <input type="checkbox" id="use-primary-constructor" @bind="_conversionSettings.UsePrimaryConstructor" class="rounded text-blue-600 dark:bg-gray-700 dark:border-gray-600 focus:ring-blue-400">
                        </div>
                    }
                    <div class="flex items-center justify-between">
                        <label class="text-xs font-mono font-semibold text-gray-800 dark:text-gray-200" for="property-access">@Localizer.PropertyAccess_Label</label>
                        <select id="property-access" @bind="_conversionSettings.PropertyAccess" class="w-32 px-2 py-1 text-xs bg-white text-gray-800 dark:text-white dark:bg-[#1E1E1E] border border-gray-300 dark:border-gray-600 rounded focus:outline-none focus:ring-1 focus:ring-blue-600">
                            @foreach (PropertyAccess access in Enum.GetValues(typeof(PropertyAccess)))
                            {
                                <option value="@access">@access</option>
                            }
                        </select>
                    </div>
                    <div class="flex items-center justify-between">
                        <label class="text-xs font-mono font-semibold text-gray-800 dark:text-gray-200" for="array-type">@Localizer.ArrayType_Label</label>
                        <select id="array-type" @bind="_conversionSettings.ArrayType" class="w-32 px-2 py-1 text-xs bg-white text-gray-800 dark:text-white dark:bg-[#1E1E1E] border border-gray-300 dark:border-gray-600 rounded focus:outline-none focus:ring-1 focus:ring-blue-600">
                            @foreach (ArrayType arrayType in Enum.GetValues(typeof(ArrayType)))
                            {
                                <option value="@arrayType">@arrayType</option>
                            }
                        </select>
                    </div>
                </div>
            </div>

            <div class="space-y-4 bg-gray-100 dark:bg-[#1E1E1E] rounded-lg p-2 border border-[#E7E7E7] dark:border-[#2D2D2D]">
                <h3 class="text-sm font-bold text-gray-800 dark:text-gray-100">@Localizer.PropertySettings_Title</h3>
                <div class="space-y-3">
                    <div class="flex items-center justify-between">
                        <label class="text-xs font-mono font-semibold text-gray-800 dark:text-gray-200" for="add-attribute">@Localizer.AddJsonAttribute_Label</label>
                        <input type="checkbox" id="add-attribute" @bind="_conversionSettings.AddAttribute" class="rounded text-blue-600 dark:bg-gray-700 dark:border-gray-600 focus:ring-blue-400">
                    </div>
                    @if (!_conversionSettings.IsDefaultInitialized)
                    {
                        <div class="flex items-center justify-between">
                            <label class="text-xs font-mono font-semibold text-gray-800 dark:text-gray-200" for="is-nullable">@Localizer.IsNullable_Label</label>
                            <input type="checkbox" id="is-nullable" @bind="_conversionSettings.IsNullable" class="rounded text-blue-600 dark:bg-gray-700 dark:border-gray-600 focus:ring-blue-400">
                        </div>
                    }
                    <div class="flex items-center justify-between">
                        <label class="text-xs font-mono font-semibold text-gray-800 dark:text-gray-200" for="is-required">@Localizer.IsRequired_Label</label>
                        <input type="checkbox" id="is-required" @bind="_conversionSettings.IsRequired" class="rounded text-blue-600 dark:bg-gray-700 dark:border-gray-600 focus:ring-blue-400">
                    </div>
                    @if (!_conversionSettings.IsNullable)
                    {
                        <div class="flex items-center justify-between">
                            <label class="text-xs font-mono font-semibold text-gray-800 dark:text-gray-200" for="default-values">@Localizer.DefaultValues_Label</label>
                            <input type="checkbox" id="default-values" @bind="_conversionSettings.IsDefaultInitialized" class="rounded text-blue-600 dark:bg-gray-700 dark:border-gray-600 focus:ring-blue-400">
                        </div>
                    }
                </div>
            </div>

            <div class="space-y-4 bg-gray-100 dark:bg-[#1E1E1E] rounded-lg p-4 border border-[#E7E7E7] dark:border-[#2D2D2D]">
                <h3 class="text-sm font-bold text-gray-800 dark:text-gray-100">@Localizer.NamingSettings_Title</h3>
                <div class="space-y-3">
                    <div class="flex flex-col space-y-2">
                        <label class="text-xs font-mono font-semibold text-gray-800 dark:text-gray-200" for="namespace">@Localizer.Namespace_Label</label>
                        <input type="text" id="namespace" @bind="_conversionSettings.Namespace" class="w-full px-2 py-1 text-xs bg-white text-gray-800 dark:text-white dark:bg-[#1E1E1E] border border-gray-300 dark:border-gray-600 rounded focus:outline-none focus:ring-1 focus:ring-blue-600">
                    </div>
                    <div class="flex flex-col space-y-2">
                        <label class="text-xs font-mono font-semibold text-gray-800 dark:text-gray-200" for="root-name">@Localizer.RootName_Label</label>
                        <input type="text" id="root-name" @bind="_conversionSettings.RootTypeName" class="w-full px-2 py-1 text-xs bg-white text-gray-800 dark:text-white dark:bg-[#1E1E1E] border border-gray-300 dark:border-gray-600 rounded focus:outline-none focus:ring-1 focus:ring-blue-600">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="lg:ml-64">
        <div class="flex justify-end space-x-4 p-2">
            <button class="flex items-center space-x-2 px-4 py-2 font-mono font-semibold bg-[#4CAF50] rounded-full text-white hover:bg-[#3E8E41] transition-colors duration-200" @onclick="CopyToClipboard">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-5 h-5">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16h8m-4-4v4m-4-4a4 4 0 108 0M4 16V8a4 4 0 014-4h8a4 4 0 014 4v8a4 4 0 01-4 4H8a4 4 0 01-4-4z" />
                </svg>
                <span>@Localizer.CopyCode_Button</span>
            </button>

            <button @onclick="Convert" disabled="@_isConverting" class="@($"px-4 py-2 font-mono font-semibold rounded-full text-white relative transition-all duration-200 disabled:opacity-70 disabled:cursor-not-allowed {(_isConverting ? "bg-[#388A34] pl-10" : "bg-[#007ACC] hover:bg-[#388A34]")}")">
                @if (_isConverting)
                {
                    <div class="absolute left-4 top-1/2 -translate-y-1/2">
                        <div class="animate-spin w-4 h-4">
                            <div class="h-full w-full rounded-full border-2 border-t-white border-r-white border-b-transparent border-l-transparent">
                            </div>
                        </div>
                    </div>
                }
                <span>@(_isConverting ? @Localizer.Converting_Label : @Localizer.Convert_Button)</span>
            </button>
        </div>

        <div class="flex flex-col lg:flex-row lg:space-x-4 p-2">
            <div class="w-full lg:w-1/2 mb-4 lg:mb-0">
                <label for="json-editor" class="block text-sm font-mono font-semibold text-gray-800 dark:text-gray-200 mb-2">
                    @Localizer.JsonEditor_Label
                </label>
                <StandaloneCodeEditor @ref="_jsonEditor" Id="json-editor" OnDidChangeModelContent="OnJsonDidChangeModelContent" 
                    ConstructionOptions="@((editor) => CreateEditorOptions("json"))"
                    CssClass="h-[calc(100vh-13rem)] rounded border border-[#E7E7E7] dark:border-[#2D2D2D]" />
            </div>

            <div class="w-full lg:w-1/2">
                <label for="csharp-editor" class="block text-sm font-mono font-semibold text-gray-800 dark:text-gray-200 mb-2">
                    @Localizer.CsharpEditor_Label
                </label>
                <StandaloneCodeEditor @ref="_csharpEditor" Id="csharp-editor" OnDidChangeModelContent="OnCsharpDidChangeModelContent"
                    ConstructionOptions="@((editor) => CreateEditorOptions("csharp"))"
                    CssClass="h-[calc(100vh-13rem)] rounded border border-[#E7E7E7] dark:border-[#2D2D2D]" />
            </div>
        </div>
    </div>
</div>